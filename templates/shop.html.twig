      </header>
      <!-- Site Header - End -->

      <!-- Main Body - Start -->
      <main class="page_content">
        <!-- Shop Page Section Start -->
        <section class="shop-page padding-tb">
          <div class="container">
            <div class="row">
              <div class="col-lg-9 col-12 sticky-widget">
                <div
                  class="shop-title d-flex flex-wrap justify-content-between"
                >
                  <p>Showing {{ products.start }} - {{ products.end }} of {{ products.total }} Results</p>
                  <div class="product-view-mode">
                    <a class="active" data-target="grid"
                      ><i class="icofont-layout"></i
                    ></a>
                    <a data-target="list"
                      ><i class="icofont-listine-dots"></i
                    ></a>
                  </div>
                </div>
                <div class="shop-product-wrap grid row justify-content-center">
                  {% for product in products.items %}
                  <div class="col-lg-4 col-sm-6 col-12">
                    <div class="product-item">
                      <div class="product-thumb">
                        <img src="{{ asset('assets/images/shop/' ~ product.image) }}" alt="shop" />
                        <div class="product-action-link">
                          <a href="{{ path('product_view', {'id': product.id}) }}"><i class="icofont-eye-alt"></i></a>
                          <a href="{{ path('wishlist_add', {'id': product.id}) }}"><i class="icofont-heart"></i></a>
                          <a href="{{ path('cart_add', {'id': product.id}) }}"><i class="icofont-cart"></i></a>
                          <a href="{{ path('product_compare', {'id': product.id}) }}"><i class="icofont-retweet"></i></a>
                        </div>
                      </div>
                      <div class="product-content">
                        <h5><a href="{{ path('product_view', {'id': product.id}) }}">{{ product.name }}</a></h5>
                        <p>
                          {% for i in 1..5 %}
                            <i class="icofont-ui-rate-blank"></i>
                          {% endfor %}
                          <span>({{ product.reviews_count }} review)</span>
                        </p>
                        <h6>${{ product.price }}</h6>
                      </div>
                    </div>
                    <div class="product-list-item">
                      <div class="product-thumb">
                        <img src="{{ asset('assets/images/shop/' ~ product.image) }}" alt="shop" />
                        <div class="product-action-link">
                          <a href="{{ path('product_view', {'id': product.id}) }}"><i class="icofont-eye-alt"></i></a>
                          <a href="{{ path('wishlist_add', {'id': product.id}) }}"><i class="icofont-heart"></i></a>
                          <a href="{{ path('cart_add', {'id': product.id}) }}"><i class="icofont-cart"></i></a>
                          <a href="{{ path('product_compare', {'id': product.id}) }}"><i class="icofont-retweet"></i></a>
                        </div>
                      </div>
                      <div class="product-content">
                        <h5><a href="{{ path('product_view', {'id': product.id}) }}">{{ product.name }}</a></h5>
                        <p>
                          {% for i in 1..5 %}
                            <i class="icofont-ui-rate-blank"></i>
                          {% endfor %}
                          <span>({{ product.reviews_count }} review)</span>
                        </p>
                        <h6>${{ product.price }}</h6>
                        <p>
                          {{ product.description|slice(0, 150) }}...
                        </p>
                      </div>
                    </div>
                  </div>
                  {% endfor %}
                </div>
                <div
                  class="pagination-area pb-0 d-flex flex-wrap justify-content-center"
                >
                  <ul class="pagination d-flex flex-wrap m-0">
                    <li class="prev">
                      <a href="{{ path('shop', {'page': products.page - 1}) }}" {% if products.page == 1 %}class="disabled"{% endif %}><i class="icofont-double-left"></i></a>
                    </li>
                    {% for i in 1..products.total_pages %}
                      <li><a href="{{ path('shop', {'page': i}) }}" {% if i == products.page %}class="active"{% endif %}>{{ i }}</a></li>
                    {% endfor %}
                    <li class="next">
                      <a href="{{ path('shop', {'page': products.page + 1}) }}">" {% if products.page == products.total_pages %}class="disabled"{% endif %}><i class="icofont-double-right"></i></a>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-lg-3 col-12">
                <div class="single-sidebar">
                  <div class="search-widget bg-color mt-5 mt-lg-0">
                    <div class="widget-title">
                      <h3>Search keywords</h3>
                    </div>
                    <div class="search">
                      <input
                        type="text"
                        name="search"
                        placeholder="Search Here..."
                        value="{{ search_query|default('') }}"
                      /><a href="{{ path('shop_search') }}"><i class="fa fa-search"></i></a>
                    </div>
                  </div>
                  <div class="shop-widget bg-color">
                    <div class="widget-title">
                      <h3>Post Category</h3>
                    </div>
                    <div class="widget-wrapper">
                      <ul class="shop-menu">
                        {% for category in categories %}
                        <li>
                          <a href="{{ path('shop_category', {'id': category.id}) }}">{{ category.name }}</a>
                          <ul class="shop-submenu">
                            <li><a href="{{ path('shop') }}">All Products</a></li>
                            {% for subcategory in category.subcategories %}
                            <li><a href="{{ path('shop_subcategory', {'id': subcategory.id}) }}">{{ subcategory.name }}</a></li>
                            {% endfor %}
                          </ul>
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                  <div class="letest-product bg-color">
                    <div class="widget-title">
                      <h3>Latest Products</h3>
                    </div>
                    <div class="widget-wrapper">
                      <ul>
                        {% for latest_product in latest_products %}
                        <li>
                          <div class="product-thumb">
                            <img
                              src="{{ asset('assets/images/shop/lest-p/' ~ latest_product.image) }}"
                              alt="shop"
                            />
                          </div>
                          <div class="product-content">
                            <h6><a href="{{ path('product_view', {'id': latest_product.id}) }}">{{ latest_product.name }}</a></h6>
                            <p>
                              {% for i in 1..5 %}
                                <i class="icofont-ui-rate-blank"></i>
                              {% endfor %}
                              <span>({{ latest_product.reviews_count }} review)</span>
                            </p>
                            <h6>${{ latest_product.price }}</h6>
                          </div>
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- Shop Page Section End -->
