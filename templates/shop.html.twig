                            <li><a href="{{ path('blog_grid') }}">Blog Grid</a></li>
                            <li><a href="{{ path('blog_list') }}">Blog Listing</a></li>
                            <li>
                              <a href="{{ path('blog_details') }}">Blog Details</a>
                            </li>
                          </ul>
                        </li>
                        <li><a href="{{ path('faq') }}">F.A.Q.</a></li>
                        <li><a href="{{ path('error') }}">404 Error</a></li>
